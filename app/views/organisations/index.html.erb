<div class="container-fluid py-5" style="background-color: #f8f9fa;">
  <div class="container">
    <!-- Header with stats -->
    <div class="row mb-5">
      <div class="col-12">
        <div class="card border-0 shadow-sm rounded-3 overflow-hidden">
          <div class="card-body p-0">
            <div class="row g-0">
              <div class="col-md-6 d-flex align-items-center" style="background: linear-gradient(135deg, #0a2e63, #1565C0);">
                <div class="p-5 text-white">
                  <h1 class="display-5 fw-bold mb-4">Welcome to Your Dashboard</h1>
                  <p class="lead mb-4">Manage your organisations and access control settings in one place.</p>
                </div>
              </div>
              <div class="col-md-6">
                <div class="p-5">
                  <div class="row g-4">
                    <div class="col-6">
                      <div class="stat-card p-3 bg-light rounded-3">
                        <h3 class="fs-1 fw-bold text-primary mb-1"><%= @organisations.count %></h3>
                        <p class="text-muted mb-0">Organisations</p>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    
    <!-- Organisations and Create Form -->
    <div class="row g-4">
      <div class="col-lg-8">
        <div class="d-flex justify-content-between align-items-center mb-4">
          <h2 class="fw-bold">Your Organisations</h2>
          <div class="d-flex gap-2">
            <div class="dropdown">
              <button class="btn btn-outline-secondary dropdown-toggle" type="button" id="sortDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                <i class="bi bi-sort-alpha-down me-1"></i> Sort
              </button>
              <ul class="dropdown-menu" aria-labelledby="sortDropdown">
                <li><a class="dropdown-item" href="#">Name (A-Z)</a></li>
                <li><a class="dropdown-item" href="#">Name (Z-A)</a></li>
                <li><a class="dropdown-item" href="#">Newest First</a></li>
                <li><a class="dropdown-item" href="#">Oldest First</a></li>
              </ul>
            </div>
            <div class="dropdown">
              <button class="btn btn-outline-secondary dropdown-toggle" type="button" id="filterDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                <i class="bi bi-funnel me-1"></i> Filter
              </button>
              <ul class="dropdown-menu" aria-labelledby="filterDropdown">
                <li><a class="dropdown-item" href="#">All Organisations</a></li>
                <li><a class="dropdown-item" href="#">Recently Updated</a></li>
                <li><a class="dropdown-item" href="#">Admin Access</a></li>
              </ul>
            </div>
          </div>
        </div>
        
        <div id="organisations_list" class="row g-4">
          <% if @organisations.present? %>
            <%= render partial: "organisation", collection: @organisations %>
          <% else %>
            <div class="col-12">
              <div class="card border-0 shadow-sm rounded-3 p-4 text-center">
                <img src="https://cdn-icons-png.flaticon.com/512/3588/3588614.png" alt="No Organisations" class="img-fluid mx-auto mb-3" style="max-width: 150px;">
                <h3 class="fw-bold">No Organisations Yet</h3>
                <p class="text-muted mb-4">You don't have any organisations yet. Create your first one using the form on the right!</p>
                <button class="btn btn-primary" onclick="document.getElementById('organisation_name').focus()">
                  <i class="bi bi-plus-circle me-1"></i> Create Your First organisation
                </button>
              </div>
            </div>
          <% end %>
        </div>
      </div>
      
      <div class="col-lg-4">
        <div class="card border-0 shadow-sm rounded-3 sticky-top" style="top: 20px;">
          <div class="card-header bg-primary text-white p-4">
            <h3 class="mb-0">Create New organisation</h3>
            <p class="mb-0 opacity-75">Get started with a new organisation</p>
          </div>
          <div class="card-body p-4">
            <div id="new_organisation_form">
              <%= render "form", organisation: Organisation.new %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Add Bootstrap Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
