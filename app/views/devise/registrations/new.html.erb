<div class="container-fluid p-0">
  <div class="row g-0">
    <!-- Left side with signup form -->
    <div class="col-md-6 d-flex align-items-center justify-content-center" style="min-height: 100vh;">
      <div class="signup-container p-4" style="width: 80%; max-width: 450px;">
        <div class="mb-4">
          <div class="d-flex align-items-center mb-2">
            <div class="brand-icon rounded-circle bg-primary d-flex align-items-center justify-content-center me-2" style="width: 32px; height: 32px;">
              <span class="text-white fw-bold">A</span>
            </div>
            <span class="fw-bold fs-4">AccessControl</span>
          </div>
          <h1 class="fw-bold mb-1">Create Account</h1>
          <p class="text-muted mb-4">Join our community today</p>
        </div>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="row mb-3">
            <div class="col-md-6">
              <div class="form-group">
                <%= f.label :first_name, class: "form-label fw-medium" %>
                <%= f.text_field :first_name, autofocus: true, class: "form-control", placeholder: "First name" %>
              </div>
            </div>
            <div class="col-md-6">
              <div class="form-group">
                <%= f.label :last_name, class: "form-label fw-medium" %>
                <%= f.text_field :last_name, class: "form-control", placeholder: "Last name" %>
              </div>
            </div>
          </div>

          <div class="form-group mb-3">
            <%= f.label :email, class: "form-label fw-medium" %>
            <%= f.email_field :email, autocomplete: "email", class: "form-control", placeholder: "Your email address" %>
          </div>

          <div class="form-group mb-3">
            <%= f.label :age, class: "form-label fw-medium" %>
            <%= f.number_field :age, class: "form-control", min: 1, placeholder: "Your age" %>
          </div>

          <div class="form-group mb-3">
            <%= f.label :password, class: "form-label fw-medium" %>
            <% if @minimum_password_length %>
            <span class="text-muted small">(<%= @minimum_password_length %> characters minimum)</span>
            <% end %>
            <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "Create a password" %>
          </div>

          <div class="form-group mb-3">
            <%= f.label :password_confirmation, class: "form-label fw-medium" %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "Confirm password" %>
          </div>

          <div class="form-check mb-3">
            <%= f.check_box :parental_consent, class: "form-check-input" %>
            <%= f.label :parental_consent, "I confirm I have parental consent (required)", class: "form-check-label" %>
          </div>

          <div class="d-grid gap-2 mb-3">
            <%= f.submit "Sign up", class: "btn btn-primary py-2" %>
          </div>
        <% end %>

        <div class="text-center mt-4">
          <p class="mb-0">Already have an account? <%= link_to "Log in", new_session_path(resource_name), class: "text-primary" %></p>
        </div>
      </div>
    </div>
    
    <!-- Right side with city skyline image -->
    <div class="col-md-6 d-none d-md-block" style="background-color: #0a1a33; min-height: 100vh;">
      <div class="h-100 d-flex align-items-center justify-content-center">
        <img src="https://images.unsplash.com/photo-1514924013411-cbf25faa35bb?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1740&q=80" 
             alt="City skyline at night" class="img-fluid" style="max-height: 100vh; width: 100%; object-fit: cover;">
      </div>
    </div>
  </div>
</div>
